{
   "apiVersion": "template.openshift.io/v1",
   "kind": "Template",
   "labels": {
      "app": "${SERVICE_NAME}",
      "app.kubernetes.io/part-of": "${SERVICE_NAME}",
      "template": "${SERVICE_NAME}"
   },
   "message": "The following service(s) have been created in your project: ${NAME}.\n\nFor more information about using this template, including OpenShift considerations, see https://github.com/sclorg/httpd-ex/blob/master/README.md.",
   "metadata": {
      "annotations": {
         "description": "An example Web Server (httpd and nginx) application that serves static content. For more information about using this template, including OpenShift considerations, see https://github.com/sclorg/httpd-ex/blob/master/README.md.",
         "iconClass": "icon-apache",
         "openshift.io/display-name": "Web Server",
         "openshift.io/documentation-url": "https://github.com/sclorg/httpd-ex",
         "openshift.io/long-description": "This template defines resources needed to develop a static application served by Web Server (httpd and nginx), including a build configuration and application deployment configuration.",
         "openshift.io/provider-display-name": "Red Hat, Inc.",
         "openshift.io/support-url": "https://access.redhat.com",
         "samples.operator.openshift.io/version": "4.7.0-0.okd-2021-03-28-152009",
         "tags": "quickstart,httpd,nginx",
         "template.openshift.io/bindable": "false"
      },
      "labels": {
         "samples.operator.openshift.io/managed": "true"
      },
      "name": "${SERVICE_NAME}",
      "namespace": "${NAMESPACE}"
   },
   "objects": [
      {
         "apiVersion": "image.openshift.io/v1",
         "kind": "ImageStream",
         "metadata": {
            "annotations": {
                "openshift.io/image.insecureRepository": "true"
            },
            "labels": {
                "backend": "${SERVICE_NAME}"
            },            
            "name": "${SERVICE_NAME}",
            "resourceVersion": null
         },
         "spec": {
            "lookupPolicy": {
               "local": false
            },
            "tags": [
               {
                  "annotations": null,
                  "from": {
                     "kind": "ImageStreamTag",
                     "name": "${VERSION}"
                  },
                  "importPolicy": {},
                  "name": "latest",
                  "referencePolicy": {
                     "type": "Local"
                  }
               },
               {
                  "annotations": null,
                  "importPolicy": {},
                  "name": "${VERSION}",
                  "referencePolicy": {
                     "type": "Local"
                  }
               }
            ]
         }
      },
      {
         "apiVersion": "image.openshift.io/v1",
         "kind": "ImageStream",
         "metadata": {
            "annotations": {
                "openshift.io/image.insecureRepository": "true"
            },
            "labels": {
                "backend": "${SERVICE_NAME}"
            },            
            "name": "${SERVICE_NAME}-${NAME_APIGW}",
            "resourceVersion": null
         },
         "spec": {
            "lookupPolicy": {
               "local": false
            },
            "tags": [
               {
                  "annotations": null,
                  "from": {
                     "kind": "ImageStreamTag",
                     "name": "${TAG_APIGW}"
                  },
                  "importPolicy": {},
                  "name": "latest",
                  "referencePolicy": {
                     "type": "Local"
                  }
               },
               {
                  "annotations": null,
                  "from": {
                     "kind": "DockerImage",
                     "name": "${SERVICE_REPOSITORY}/${SERVICE_NAME}-${NAME_APIGW}:${TAG_APIGW}"
                  },
                  "importPolicy": {},
                  "name": "${TAG_APIGW}",
                  "referencePolicy": {
                     "type": "Local"
                  }
               }
            ]
         }
      },
      {
         "apiVersion": "image.openshift.io/v1",
         "kind": "ImageStream",
         "metadata": {
            "annotations": {
                "openshift.io/image.insecureRepository": "true"
            },
            "labels": {
                "backend": "${SERVICE_NAME}"
            },            
            "name": "${SERVICE_NAME}-${NAME_HTTPD}",
            "resourceVersion": null
         },
         "spec": {
            "lookupPolicy": {
               "local": false
            },
            "tags": [
               {
                  "annotations": null,
                  "from": {
                     "kind": "ImageStreamTag",
                     "name": "${TAG_HTTPD}"
                  },
                  "importPolicy": {},
                  "name": "latest",
                  "referencePolicy": {
                     "type": "Local"
                  }
               },
               {
                  "annotations": null,
                  "from": {
                     "kind": "DockerImage",
                     "name": "${SERVICE_REPOSITORY}/${SERVICE_NAME}-${NAME_HTTPD}:${TAG_HTTPD}"
                  },
                  "importPolicy": {},
                  "name": "${TAG_HTTPD}",
                  "referencePolicy": {
                     "type": "Local"
                  }
               }
            ]
         }
      },
      {
         "apiVersion": "image.openshift.io/v1",
         "kind": "ImageStream",
         "metadata": {
            "annotations": {
                "openshift.io/image.insecureRepository": "true"
            },
            "labels": {
                "backend": "${SERVICE_NAME}"
            },            
            "name": "${SERVICE_NAME}-${NAME_NGINX}",
            "resourceVersion": null
         },
         "spec": {
            "lookupPolicy": {
               "local": false
            },
            "tags": [
               {
                  "annotations": null,
                  "from": {
                     "kind": "ImageStreamTag",
                     "name": "${TAG_NGINX}"
                  },
                  "importPolicy": {},
                  "name": "latest",
                  "referencePolicy": {
                     "type": "Local"
                  }
               },
               {
                  "annotations": null,
                  "from": {
                     "kind": "DockerImage",
                     "name": "${SERVICE_REPOSITORY}/${SERVICE_NAME}-${NAME_NGINX}:${TAG_NGINX}"
                  },
                  "importPolicy": {},
                  "name": "${TAG_NGINX}",
                  "referencePolicy": {
                     "type": "Local"
                  }
               }
            ]
         }
      },
      {
         "apiVersion": "v1",
         "kind": "Service",
         "metadata": {
            "annotations": {
               "description": "Exposes and load balances the application pods"
            },
            "name": "${SERVICE_NAME}"
         },
         "spec": {
            "ports": [
               {
                  "name": "web",
                  "port": 8080,
                  "targetPort": 8080
               }
            ],
            "selector": {
               "name": "${SERVICE_NAME}"
            }
         }
      },
      {
         "apiVersion": "v1",
         "kind": "Route",
         "metadata": {
            "name": "${SERVICE_NAME}"
         },
         "spec": {
            "host": "${SERVICE_NAME}.${APPLICATION_DOMAIN}",
            "to": {
               "kind": "Service",
               "name": "${SERVICE_NAME}"
            }
         }
      },
      {
         "apiVersion": "v1",
         "kind": "DeploymentConfig",
         "metadata": {
            "annotations": {
               "description": "Defines how to deploy the application server",
               "template.alpha.openshift.io/wait-for-ready": "true"
            },
            "name": "${SERVICE_NAME}"
         },
         "spec": {
            "replicas": 1,
            "selector": {
               "name": "${SERVICE_NAME}"
            },
            "strategy": {
               "type": "Rolling"
            },
            "template": {
               "metadata": {
                  "labels": {
                     "name": "${SERVICE_NAME}"
                  },
                  "name": "${SERVICE_NAME}"
               },
               "spec": {
                  "containers": [
                     {
                        "env": [],
                        "image": " ",
                        "name": "${NAME_APIGW}",
                        "ports": [
                           {
                              "containerPort": 8080
                           }
                        ],
                        "resources": {
                           "limits": {
                              "memory": "${MEMORY_LIMIT}"
                           }
                        }
                     },                     
                     {
                        "env": [],
                        "image": " ",
                        "livenessProbe": {
                           "httpGet": {
                              "path": "/",
                              "port": 8081
                           },
                           "initialDelaySeconds": 30,
                           "timeoutSeconds": 3
                        },
                        "name": "${NAME_HTTPD}",
                        "ports": [
                           {
                              "containerPort": 8081
                           }
                        ],
                        "readinessProbe": {
                           "httpGet": {
                              "path": "/",
                              "port": 8081
                           },
                           "initialDelaySeconds": 3,
                           "timeoutSeconds": 3
                        },
                        "resources": {
                           "limits": {
                              "memory": "${MEMORY_LIMIT}"
                           }
                        }
                     },
                     {
                        "env": [],
                        "image": " ",
                        "livenessProbe": {
                           "httpGet": {
                              "path": "/",
                              "port": 8082
                           },
                           "initialDelaySeconds": 30,
                           "timeoutSeconds": 3
                        },
                        "name": "${NAME_NGINX}",
                        "ports": [
                           {
                              "containerPort": 8082
                           }
                        ],
                        "readinessProbe": {
                           "httpGet": {
                              "path": "/",
                              "port": 8082
                           },
                           "initialDelaySeconds": 3,
                           "timeoutSeconds": 3
                        },
                        "resources": {
                           "limits": {
                              "memory": "${MEMORY_LIMIT}"
                           }
                        }
                     } 
                  ]
               }
            },
            "triggers": [
               {
                  "imageChangeParams": {
                     "automatic": true,
                     "containerNames": [
                        "${NAME_APIGW}"
                     ],
                     "from": {
                        "kind": "ImageStreamTag",
                        "name": "${SERVICE_NAME}-${NAME_APIGW}:latest"
                     }
                  },
                  "type": "ImageChange"
               },               
               {
                  "imageChangeParams": {
                     "automatic": true,
                     "containerNames": [
                        "${NAME_HTTPD}"
                     ],
                     "from": {
                        "kind": "ImageStreamTag",
                        "name": "${SERVICE_NAME}-${NAME_HTTPD}:latest"
                     }
                  },
                  "type": "ImageChange"
               },
               {
                  "imageChangeParams": {
                     "automatic": true,
                     "containerNames": [
                        "${NAME_NGINX}"
                     ],
                     "from": {
                        "kind": "ImageStreamTag",
                        "name": "${SERVICE_NAME}-${NAME_NGINX}:latest"
                     }
                  },
                  "type": "ImageChange"
               },
               {
                  "type": "ConfigChange"
               }
            ]
         }
      }
   ],
   "parameters": [
      {
         "description": "The version assigned to all of the frontend objects defined in this template.",
         "displayName": "Version",
         "name": "VERSION",
         "required": true,
         "value": ""
      },
      {
         "description": "The name assigned to all of the frontend objects defined in this template.",
         "displayName": "Namespace",
         "name": "NAMESPACE",
         "required": true,
         "value": "icdc-test"
      },
      {
         "description": "The OpenShift Namespace where the ImageStream resides.",
         "displayName": "Service Name",
         "name": "SERVICE_NAME",
         "required": true,
         "value": "web-server"
      },
      {
         "description": "The OpenShift Namespace where the ImageStream resides.",
         "displayName": "Name",
         "name": "NAME_APIGW",
         "required": true,
         "value": "apigw"
      },
      {
         "description": "The version assigned to all of the frontend objects defined in this template.",
         "displayName": "Tag",
         "name": "TAG_APIGW",
         "required": true,
         "value": ""
      },
      {
         "description": "The OpenShift Namespace where the ImageStream resides.",
         "displayName": "Name",
         "name": "NAME_HTTPD",
         "required": true,
         "value": "httpd"
      },
      {
         "description": "The version assigned to all of the frontend objects defined in this template.",
         "displayName": "Tag",
         "name": "TAG_HTTPD",
         "required": true,
         "value": ""
      },
      {
         "description": "The OpenShift Namespace where the ImageStream resides.",
         "displayName": "Name",
         "name": "NAME_NGINX",
         "required": true,
         "value": "nginx"
      },
      {
         "description": "The version assigned to all of the frontend objects defined in this template.",
         "displayName": "Tag",
         "name": "TAG_NGINX",
         "required": true,
         "value": ""
      },
      {
         "description": "The exposed hostname that will route to the httpd service, if left blank a value will be defaulted.",
         "displayName": "Service Repository",
         "name": "SERVICE_REPOSITORY",
         "required": true,
         "value": "docker.apps.dev.ocp.zby.icdc.io/cloud"
      },
      {
         "description": "Maximum amount of memory the container can use.",
         "displayName": "Memory Limit",
         "name": "MEMORY_LIMIT",
         "required": true,
         "value": "512Mi"
      },
      {
         "description": "The exposed hostname that will route to the httpd service, if left blank a value will be defaulted.",
         "displayName": "Application Hostname",
         "name": "APPLICATION_DOMAIN",
         "required": true,
         "value": "loc.icdc.io"
      }
   ]
}
